<!-- projects\index.handlebars -->
  
    <div class="panel panel-default">
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-10">
          <h2>Projects</h2>
        </div>
        <div class="col-md-2">
          <button  class="btn btn-success">Join this Project</button> 
        </div>
      </div> 
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover "> 
          <tbody>

          {{#each data}}
            <tr>
              <td class='col-md-2'> <a href="/notes/view/{{this.id}}"><img  src= "{{this.image_url}}"  height="200" width="200"></a></td>

              <td class='col-md-8'>
                    <div>
                        <h4><a href="/notes/view/{{this.id}}"> Name: {{this.name}} </a> </h4>
                    </div>
                    <div><b>Details:</b> {{this.tagLine}} </div>
                    <div><b>Location:</b> {{this.location}} </div>
                    <div><b>Instructions:</b> {{this.instructions}} </div>
                    <div><b>Announcements:</b> {{this.current_announcements}} </div>
              </td>

              <td class='col-md-2'>
                <form method="get" action="/project/update/{{this.id}}">
                    <button  class="btn btn-default">Edit Project</button>   
                </form>
              </td>
            </tr>
          {{/each}}
          
          </tbody>
        </table> 
      </div>
    </div>
 
    
  
  